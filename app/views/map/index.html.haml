#map_container
  #map
  
:javascript
  $(document).one('map:ready', function(e, container) {
    geojson = MapLayer.fromConfig({ type: 'geojson', url: '/events.geojson', popup: '<h4>{{title}}</h4><p>{{description}}</p><dl class="dl-horizontal event"><dt>Group</dt><dd>{{group.name}}</dd><dt>When?</dt><dd>{{event_at}}</dd></dl>' });
    geojson.addTo(container.map);
  })