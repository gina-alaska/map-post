.container
  %h1 Listing admins

  %table.table.table-bordered.table-striped.table-condensed
    %thead
      %tr
        %th Name
        %th Last logged in?
        %th.text-right Actions
    %tbody
      - @members.each do |member|
        %tr
          %td= link_to member.name_with_email, member
          %td= member.last_login
          %td.text-right
            .btn-group
              = link_to member, class: 'btn btn-sm btn-primary' do
                %i.glyphicon.glyphicon-eye-open
              = link_to edit_membership_path(member), class: 'btn btn-sm btn-default' do
                %i.glyphicon.glyphicon-edit
              - unless current_user.membership == member
                = link_to member, method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } do
                  %i.glyphicon.glyphicon-trash
          